# This file is managed by Puppet
# nslcd configuration file. See nslcd.conf(5) for details.

# The user and group nslcd should run as.
uid nslcd
gid nslcd

# The search base that will be used for all queries.
base <%= @ldap_base %>

# SSL options
ssl on
tls_reqcert never

# LDAP Server
uri ldaps://<%= @ldap_server %>
